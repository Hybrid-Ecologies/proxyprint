!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      Proxies - #{params[:action].humanize}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    - if params[:controller] != "application"
      = stylesheet_link_tag params[:controller], media: 'all', 'data-turbolinks-track' => true
      = javascript_include_tag params[:controller], 'data-turbolinks-track' => true
    = csrf_meta_tags
    %meta{:content => "width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0", :name => "viewport"}/
  %body
    %nav.navbar.navbar-default{:role => "navigation"}
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"}
            %b#logo Proxies
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{:class => "#{params[:action] == "home" ? "active" : ""}"}
              %a{:href => "/"} Home
            %li{:class => "#{params[:action] == "interface" ? "active" : ""}"}
              = link_to "Jig Interface", jig_interface_path(1)
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = glyph "window", :title => "views"
                Views
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li{:class => "#{params[:action] == "designer" ? "active" : ""}"}
                  = link_to "Jig Designer", jig_designer_path, :class=> "navbar-link"
                %li{:class => "#{params[:action] == "form" ? "active" : ""}"}
                  = link_to "Form Designer", jig_form_path, :class=> "navbar-link"
                %li{:class => "#{params[:action] == "peg" ? "active" : ""}"}
                  = link_to "Peg Designer", peg_designer_path, :class=> "navbar-link"
                %li{:class => "#{params[:action] == "threejs" ? "active" : ""}"}
                  = link_to "Weave Designer", weaver_path, :class=> "navbar-link"
                %li
                  = link_to "pic2stl", pic2stl_path , :class=> "navbar-link"
                %li
                  = link_to "planebox", plane_box_path, :class=> "navbar-link"
                %li
                  = link_to "threejs_env", three_env_path , :class=> "navbar-link"
          / Sign in
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              / MENU ACCOUNT ITEM
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  = glyph "user", :title => "settings"
                  %strong= current_user.email
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to "Upload a model".html_safe, "", :class => 'navbar-link'
                  %li.divider
                  %li
                    = link_to "Your collection".html_safe, :class => 'navbar-link'
                  %li
                    = link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link'
                  %li.divider
                  %li= link_to 'Sign out', destroy_user_session_path, :method => :delete, :class => 'navbar-link'
              / END MENU ACCOUNT ITEM
            - else
              %li
                - link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
              %li= link_to "Login", new_user_session_path, :class => 'navbar-link'
          / end sign in
        / /.navbar-collapse
      / /.container-fluid
    .container
      - if notice
        %p.alert.alert-success= notice
      - if alert
        %p.alert.alert-danger= alert
      = yield
    %footer.footer.shadow
      .container
        %p.text-muted
          %a{:href => "/"}
            %b Proxies
          Adobe Systems 2015
